<table class="table table-striped">
<% @new_tickets.each do |t| %>
  <tr>
    <td><%= t.id %></td>
    <td><%=link_to t.name, ticket_path(t) %></td>
    <td><%=truncate t.description, :length => 25, :omission => '...' %></td>
    <td><%= t.state %></td>
    <td><%=l t.created_at %></td>
  </tr>
<% end %>
</table>

<%= paginate @new_tickets %>